widgetsExample:
<widgetsExample>:

    #rows:3
    cols:3
    Button:
        text:'+'
        size_hint_x:None
        size_hint_y:None
        width:sp(100)
        height:sp(50)
        on_press:root.plus()
    Label:
        text:root.my_text
        size_hint_x:None
        size_hint_y:None
        width:sp(100)
        height:sp(50)

    Button:
        text:'-'
        bold:True
        font_size:10
        size_hint_x:None
        size_hint_y:None
        width:sp(100)
        height:sp(50)
        on_press:root.minus()

