<widgetsExample>:

    #rows:3
    cols:2
    Button:
        text:'+'

        on_press:root.plus()
    Label:
        font_name:'fonts/Lcd.ttf'
        text:root.my_text
        font_size:'80dp'
        color:1,.5,1,1
    Button:
        text:'-'
        bold:True
        font_size:10

        on_press:root.minus()
    ToggleButton:
        text:'Toggle'
        on_state:root.on_State(self)
    Switch:
        id:MY_Switch
        on_active:root.on_Switch(self)
    Slider:
        id:my_slider
        min:0
        max:100
        value:50
        orientation:'vertical'
        on_value:root.on_Slider(self)
        disabled:not MY_Switch.active
    Label:
        font_name:'fonts/Lcd.ttf'
        text:root.Slider_value
        font_size:sp(80)
    BoxLayout:
        Label:
            text:str(int(my_slider.value))
        ProgressBar:
            id:bar
            max:100
            value:my_slider.value
    TextInput:
        id:TextInput_text
        size_hint:(None,1)
        width:'100dp'
        text:'Food'
        multiline:False
        on_text_validate:root.On_Text_Validate(self)

    Label:
        text:root.text_input_str
